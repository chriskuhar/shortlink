{
  "name": "link-shortener",
  "version": "0.0.0",
  "description": "a link shortener app",
  "main": "src/index.ts",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:clean": "rm -r build",
    "start-server": "node --inspect=9229 build/index.js",
    "start": "npm-run-all -p start-server db",
    "test": "jest --runInBand",
    "db": "json-server --port 3030 db.json"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.22",
    "@types/node": "8.10.52",
    "@types/node-fetch": "2.1.2",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@types/cors": "^2.8.10",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "express": "4.17.1",
    "json-server": "^0.16.3",
    "nano-md5": "^1.0.5",
    "node-fetch": "2.2.0",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "node",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "./src"
    ],
    "modulePaths": [
      "./node_modules"
    ]
  }
}
